}





<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@using (Html.BeginForm("AppointJobsAndWorkers", "JobAppointment", FormMethod.Post))
{
    foreach (var name in @Model.works)
    {
<li class="list-group-item">
